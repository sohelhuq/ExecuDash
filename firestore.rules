rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the owner of the resource and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(resource);
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile.
     * @allow (get) User with ID 'user123' can read their profile.
     * @allow (update) User with ID 'user123' can update their profile.
     * @allow (delete) User with ID 'user123' can delete their profile.
     * @deny (create) User with ID 'user456' cannot create a profile for 'user123'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for dashboards owned by a user.
     * @path /users/{userId}/dashboards/{dashboardId}
     * @allow (create) User with ID 'user123' can create a dashboard under their profile.
     * @allow (get) User with ID 'user123' can read a dashboard under their profile.
     * @allow (update) User with ID 'user123' can update a dashboard under their profile.
     * @allow (delete) User with ID 'user123' can delete their dashboard under their profile.
     * @deny (create) User with ID 'user456' cannot create a dashboard for 'user123'.
     * @principle Restricts access to a user's own data tree.
     */
    match /users/{userId}/dashboards/{dashboardId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for business units.
     * @path /business_units/{businessUnitId}
     * @allow (get) Any user can read business unit data.
     * @deny (create) No one can create business unit data without authorization.
     * @deny (update) No one can update business unit data without authorization.
     * @deny (delete) No one can delete business unit data without authorization.
     * @principle Public read, owner-only writes (Not Implemented).
     */
    match /business_units/{businessUnitId} {
      allow get, list: if true;
      allow create: if isSignedIn(); // Only signed in users can create.
      allow update: if false; // No updates allowed in prototype mode.
      allow delete: if false; // No deletes allowed in prototype mode.
    }

    /**
     * @description Rules for metrics related to a specific business unit.
     * @path /business_units/{businessUnitId}/metrics/{metricId}
     * @allow (get) Any user can read metric data.
     * @deny (create) No one can create metric data without authorization.
     * @deny (update) No one can update metric data without authorization.
     * @deny (delete) No one can delete metric data without authorization.
     * @principle Public read, owner-only writes (Not Implemented).
     */
    match /business_units/{businessUnitId}/metrics/{metricId} {
      allow get, list: if true;
      allow create: if isSignedIn(); // Only signed in users can create.
      allow update: if false; // No updates allowed in prototype mode.
      allow delete: if false; // No deletes allowed in prototype mode.
    }

    /**
     * @description Rules for widgets related to a specific business unit.
     * @path /business_units/{businessUnitId}/widgets/{widgetId}
     * @allow (get) Any user can read widget data.
     * @deny (create) No one can create widget data without authorization.
     * @deny (update) No one can update widget data without authorization.
     * @deny (delete) No one can delete widget data without authorization.
     * @principle Public read, owner-only writes (Not Implemented).
     */
    match /business_units/{businessUnitId}/widgets/{widgetId} {
      allow get, list: if true;
      allow create: if isSignedIn(); // Only signed in users can create.
      allow update: if false; // No updates allowed in prototype mode.
      allow delete: if false; // No deletes allowed in prototype mode.
    }

    /**
     * @description Rules for alert rules for a specific business unit.
     * @path /business_units/{businessUnitId}/alerts/{alertId}
     * @allow (get) Any user can read alert data.
     * @deny (create) No one can create alert data without authorization.
     * @deny (update) No one can update alert data without authorization.
     * @deny (delete) No one can delete alert data without authorization.
     * @principle Public read, owner-only writes (Not Implemented).
     */
    match /business_units/{businessUnitId}/alerts/{alertId} {
      allow get, list: if true;
      allow create: if isSignedIn(); // Only signed in users can create.
      allow update: if false; // No updates allowed in prototype mode.
      allow delete: if false; // No deletes allowed in prototype mode.
    }
  }
}