rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures the `/users/{userId}` collection.  Allows a user to read and write their own profile.
     * @path /users/{userId}
     * @allow (create) - A user with UID 'user_abc' can create their profile at /users/user_abc if the document.id matches their UID.
     * @allow (get, list, update, delete) - A user with UID 'user_abc' can get, update, and delete their profile at /users/user_abc.
     * @deny (create) - A user with UID 'user_abc' cannot create a profile for another user at /users/user_xyz.
     * @deny (update, delete) - A user with UID 'user_abc' cannot update or delete another user's profile at /users/user_xyz.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      // Helper function to check if the user is signed in and owns the resource.
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is not allowed.
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Secures the `/users/{userId}/dashboards/{dashboardId}` collection.  Allows a user to manage their own dashboards.
     * @path /users/{userId}/dashboards/{dashboardId}
     * @allow (create) - A user with UID 'user_abc' can create a dashboard under /users/user_abc/dashboards/dashboard_123.
     * @allow (get, list, update, delete) - A user with UID 'user_abc' can get, list, update, and delete their own dashboards under /users/user_abc/dashboards/.
     * @deny (create) - A user with UID 'user_abc' cannot create a dashboard under another user's path /users/user_xyz/dashboards/dashboard_123.
     * @deny (update, delete) - A user with UID 'user_abc' cannot update or delete another user's dashboard under /users/user_xyz/dashboards/dashboard_123.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/dashboards/{dashboardId} {
      // Helper function to check if the user is signed in and owns the resource.
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId)/dashboards/$(dashboardId));
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Secures the `/business_units/{businessUnitId}` collection.
     * @path /business_units/{businessUnitId}
     * @allow (get, list) - Allows anyone to read business unit information.
     * @allow (create) - Only authenticated users can create business units.
     * @allow (update, delete) - Only authenticated users can update or delete business units.
     * @principle Allows public read access but restricts writes to authenticated users.
     */
    match /business_units/{businessUnitId} {
       // Helper function to check if the user is signed in.
      function isSignedIn() {
        return request.auth != null;
      }

      function isExisting() {
        return exists(/databases/$(database)/documents/business_units/$(businessUnitId));
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Secures the `/business_units/{businessUnitId}/metrics/{metricId}` collection.
     * @path /business_units/{businessUnitId}/metrics/{metricId}
     * @allow (get, list) - Allows anyone to read metric information.
     * @allow (create) - Only authenticated users can create metrics.
     * @allow (update, delete) - Only authenticated users can update or delete metrics.
     * @principle Allows public read access but restricts writes to authenticated users.
     */
    match /business_units/{businessUnitId}/metrics/{metricId} {
      // Helper function to check if the user is signed in.
      function isSignedIn() {
        return request.auth != null;
      }

        function isExisting() {
        return exists(/databases/$(database)/documents/business_units/$(businessUnitId)/metrics/$(metricId));
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Secures the `/business_units/{businessUnitId}/widgets/{widgetId}` collection.
     * @path /business_units/{businessUnitId}/widgets/{widgetId}
     * @allow (get, list) - Allows anyone to read widget information.
     * @allow (create) - Only authenticated users can create widgets.
     * @allow (update, delete) - Only authenticated users can update or delete widgets.
     * @principle Allows public read access but restricts writes to authenticated users.
     */
    match /business_units/{businessUnitId}/widgets/{widgetId} {
      // Helper function to check if the user is signed in.
      function isSignedIn() {
        return request.auth != null;
      }

        function isExisting() {
        return exists(/databases/$(database)/documents/business_units/$(businessUnitId)/widgets/$(widgetId));
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Secures the `/business_units/{businessUnitId}/alerts/{alertId}` collection.
     * @path /business_units/{businessUnitId}/alerts/{alertId}
     * @allow (get, list) - Allows anyone to read alert information.
     * @allow (create) - Only authenticated users can create alerts.
     * @allow (update, delete) - Only authenticated users can update or delete alerts.
     * @principle Allows public read access but restricts writes to authenticated users.
     */
    match /business_units/{businessUnitId}/alerts/{alertId} {
      // Helper function to check if the user is signed in.
      function isSignedIn() {
        return request.auth != null;
      }

      function isExisting() {
        return exists(/databases/$(database)/documents/business_units/$(businessUnitId)/alerts/$(alertId));
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }
  }
}