rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read and write their own profile and notifications
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    match /users/{userId}/notifications/{notificationId} {
      allow read, write, delete: if isSignedIn() && isOwner(userId);
    }
    
    // Users can manage their own financial data and business units
    match /users/{userId}/{collection}/{docId} {
       allow read, write, delete: if isSignedIn() && (collection in ['transactions', 'taxRecords', 'goals', 'ccAccounts', 'savingsAccounts', 'assignedAccounts', 'jobResponsibilities', 'businessUnits', 'dps', 'fdr', 'employees', 'payrolls', 'rentalEntries', 'attendance_points']) && isOwner(userId);
    }

    // Users can manage data within their business units
    match /users/{userId}/businessUnits/{unitId}/{subCollection}/{recordId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId) && (subCollection in ['meterReadings', 'stockItems', 'transactions']);
    }

    // Pharmacy specific rules
    match /users/{userId}/pharmacy/{subCollection}/{recordId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId) && (subCollection in ['products', 'sales']);
    }

    // Compliance logs are immutable and can only be created. For now, any signed-in user can create them.
    // You might want to restrict this to admin users in the future.
    match /complianceLogs/{logId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}

    