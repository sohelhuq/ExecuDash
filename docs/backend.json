{
  "entities": {
    "AttendancePoint": {
      "title": "Attendance Point",
      "type": "object",
      "description": "Represents points awarded for employee attendance.",
      "properties": {
        "employeeName": {
          "type": "string"
        },
        "inTime": {
          "type": "string",
          "format": "time"
        },
        "points": {
          "type": "number"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      }
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/attendance_points/{pointId}",
        "definition": {
          "entityName": "AttendancePoint",
          "schema": {
            "$ref": "#/backend/entities/AttendancePoint"
          },
          "description": "Stores attendance points for employees."
        }
      }
    ]
  }
}